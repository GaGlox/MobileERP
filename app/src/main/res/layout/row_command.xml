<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_width="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/cmd_code_label"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="N°"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/cmd_code_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=": 0001"
                android:textColor="@android:color/black"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/cmd_customer_label"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="Client"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/cmd_customer_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=": MONSEMBULA RICHARD"
                android:textColor="@android:color/black"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/cmd_delivery_label"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="Livraison"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/cmd_delivery_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=": 20/01/2022"
                android:textColor="@android:color/black"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/cmd_status_label"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="Statut"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/cmd_status_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=": Non livré"
                android:textColor="@android:color/holo_red_dark"
                android:textStyle="normal" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:gravity="top"
        android:id="@+id/cmd_order_date"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_width="wrap_content"
        android:text="13/01/2022"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>